#include<iostream>
using namespace std;
int main()
{
int a,i,j,s,k=1,l=0;
  cout<<"Enter the number"<<endl;
  cin>>a;
  for(i=1;i<a;i++)
  {
    for(s=0;s<a+10-i-l;s++)
    {
      cout<<" ";
    }
        l++;
    for(j=1;j<i;j++)
    {
      cout<<j<<" ";
    }
    for(j=i;j>0;j--)
      cout<<j<<" ";
    cout<<endl;
  }
}
